										<field name="how_none"  string="Ninguno"/>
										<field name="how_reco"  string="Recomendación"/>
										<field name="how_tv"    string="Tv"/>
										<field name="how_radio" string="Radio"/>
										<field name="how_inter" string="Internet"/>
										<field name="how_web"   string="Web"/>

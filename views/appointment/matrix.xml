	<data>




<!-- FORM -->
		<record model="ir.ui.view" id="matrix_form_view">
			<field name="name">price_list.matrix.form</field>
			<field name="model">price_list.matrix</field>
			<field name="arch" type="xml">
				<form string="Matrix Form">

<!-- Header -->
					<header>

						<!-- Update -->
						<button 
								type="object" 
								class="oe_highlight"

								name="update"

								string="Update"                               
						/>

						<!-- Validate -->
						<button 
								type="object" 
								class="oe_highlight"

								name="validate"

								string="Validate"                               
						/>
					</header>




<!-- Sheet -->
					<sheet>
<!--
						<group  string="Total"  col="3">
-->


						<group>
							<group>
								<field name="name"/>
							</group>

							<group>
							</group>
						</group>

								<field name="appointment" widget="x2many_2d_matrix" />
<!--
								<field name="appointment"/>
-->
						<group>

<!--
							<group>
							</group>
							<group>
							</group>
-->
						</group>


						<!-- Notebook --> 
						<notebook>  
							<!-- Bench --> 
							<page   string="Appointments">
								<group>
									<group>
									</group>
									<group>
									</group>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>







<!-- TREE -->
		<record model="ir.ui.view" id="matrix_view_tree">
			<field name="name">price_list.matrix.tree</field>
			<field name="model">price_list.matrix</field>
			<field name="arch" type="xml">
				<tree string="matrix Tree">
					<field name="name"/>
					<field name="appointment"/>
				</tree>
			</field>
		</record>



<!-- ACTIONS -->

        <!-- Matrix -->
        <record model="ir.actions.act_window" id="matrix_all_tree_action">

            <field name="name">Matrix Tree Action</field>
            
            <field name="res_model">price_list.matrix</field>
            
            <field name="view_type">form</field>

            <field name="view_mode">tree,form</field>

            <field name="domain">[]</field>

            <field name="context">{}</field>

            <field name="limit">1000</field>

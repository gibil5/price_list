                        <!-- Pl - Create Electronic --> 
                        <button 
                            type="object" 
                            class="oe_highlight"
                            name="pl_create_electronic" 
                            
                            string="Pl - Facturación"
                        />


                        <!-- Pl - Export Txt --> 
                        <button 
                            type="object" 
                            class="oe_highlight"
                            name="pl_export_txt" 
                            
                            string="Pl - Crear TXT"                              
                        />


                        <!-- Clear --> 
                        <button 
                            type="object" 
                            class="oe_highlight oe_right"
                            name="clear"

                            string="Clear"

                            groups="openhealth.roots"
                        />

                        <!-- Clear --> 
                        <button 
                            type="object" 
                            class="oe_highlight oe_right"

                            name="correct"

                            string="Correct"

                            groups="openhealth.roots"
                        />
                    </header>




                    <!-- Sheet -->  
                    <sheet>

                        <group>
                            <group>                             
                                <field name="name"/>

                                <field name="export_date_begin"/>

                                <field name="export_date_end"    attrs="{'invisible':[('several_dates', 'in', [False, ''])]}"/>

                                <field name="txt_pack"      filename="txt_pack_name"/>
                            </group>
                            <group>
                                <field name="amount_total"/>
                                <field name="receipt_count"/>
                                <field name="invoice_count"/>

                                <field name="vspace"/>
                                <field name="several_dates"/>

                                <field name="correct_patient"/>
                            </group>
                        </group>



                        <group groups="openhealth.roots">
                            <group>                             
                                <field name="state_arr"   groups="openhealth.roots"/>
                                <field name="type_arr"   groups="openhealth.roots"/>
                            </group>                             

                            <group>
<!--
                                <field name="mgt"   groups="openhealth.roots"/>
-->
                            </group>
                        </group>



                        <!-- Padding -->
                        <group>
                            <group></group>
                            <group></group>
                        </group>

                        <!-- Notebook --> 
                        <notebook>

                            <page string="Facturacion">
                                <field name="electronic_order_ids"/>
                            </page>

                            <page string="TXT">
                                <field name="txt_ids"/> 
                            </page>
<!--
                            <page string="MSSOFT">
                                <field name="txt_ref_ids"/>
                            </page>
-->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

            <field name="name">container.form</field>
            <field name="model">openhealth.container</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="container Form">
                    <header>

<!--
                            string="Crear Electrónico"                              
-->
                        <!-- Create Electronic --> 
                        <!-- Export Txt --> 

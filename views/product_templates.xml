<openerp>
	<data>



		<!-- explicit list view definition -->
		<record model="ir.ui.view" id="price_list.product_template_list">

			<field name="name">price_list product template list</field>
			
			<field name="model">product.template</field>
			
			<field name="arch" type="xml">
				<tree>

					<field name="pl_price_list"/>

					<field name="type"/>

					<field name="name"/>

					<field name="pl_name_short"/>

					<field name="pl_prefix"/>
					<field name="pl_idx"/>
					<field name="pl_code"/>
					
					<field name="pl_family"/>
					<field name="pl_subfamily"/>
					<field name="pl_treatment"/>
					<field name="pl_zone"/>
					<field name="pl_pathology"/>

					<field name="pl_level"/>
					<field name="pl_sessions"/>
					<field name="pl_time"/>

					<field name="pl_price"/>
					<field name="pl_price_vip"/>
					<field name="pl_price_company"/>
					<field name="pl_price_session"/>
					<field name="pl_price_session_next"/>
					<field name="pl_price_max"/>
				</tree>
			</field>
		</record>




		<!-- actions opening views on models -->
		<record model="ir.actions.act_window" id="price_list.product_template_list_action">
			
			<field name="name">product template window</field>
			
			<field name="res_model">product.template</field>
			
			<field name="view_mode">tree,form</field>

            <field name="view_id" ref="price_list.product_template_list"/> 
		</record>




		<!-- Action - 2018 -->
		<record model="ir.actions.act_window" id="price_list.product_template_2018_list_action">
			
			<field name="name">product template 2018</field>
			
			<field name="res_model">product.template</field>
			
			<field name="view_mode">tree,form</field>

            <field name="view_id" ref="price_list.product_template_list"/> 


            <field name="domain">[
                                    ('pl_price_list', '=', '2018'),
                                ]
            </field>
		</record>



		<!-- Action - 2019 -->
		<record model="ir.actions.act_window" id="price_list.product_template_2019_list_action">
			
			<field name="name">product template 2019</field>
			
			<field name="res_model">product.template</field>
			
			<field name="view_mode">tree,form</field>

            <field name="view_id" ref="price_list.product_template_list"/> 

            <field name="domain">[
                                    ('pl_price_list', '=', '2019'),
                                ]
            </field>
		</record>


	</data>
</openerp>

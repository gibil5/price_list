<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>



<!-- FORM -->
		<record model="ir.ui.view" id="treatment_form_view">
			<field name="name">openhealth.treatment.form</field>
			<field name="model">openhealth.treatment</field>
			<field name="inherit_id" ref="openhealth.treatment_form_view"/>   
			<field name="mode">primary</field>
			<field name="priority">1</field>
			

			<!-- Search and Change -->
			<field name="arch" type="xml">
				<xpath expr="//field[@name='x_test_scenario']" position="replace">

					<!-- Price lists -->
					<field name="test_pricelist_2019"/>
					<field name="test_pricelist_2018"/>

					<!-- Reports -->
					<field name="report_management"/>
					<field name="report_marketing"/>
					<field name="report_account"/>

					<field name="report_product"/>



					<!-- Buttons -->
                    <group>
	                    <group>
	                        <!-- Test Integration -->
	                        <button 
	                            type="object" 
	                            class="oe_highlight"
	                            help='Test Integration'
	                            
	                            name="test_integration" 
	                            
	                            string="Test Integration"
	                        />

	                        <!-- Reset -->
	                        <button 
	                            type="object" 
	                            class="oe_highlight"
	                            groups="openhealth.roots"
	                            help='Tests: Reset'

	                            name="test_reset"

	                            string="Reset"
	                        />
	                    </group>
                    </group>

                    <group>
	                    <group>
							<button 
									type="object"
									class="oe_highlight"

									name="test_report_management"

									string="MGT"
							/>

							<button 
									type="object"
									class="oe_highlight"

									name="test_report_marketing"

									string="MKT"
							/>

							<button 
									type="object"
									class="oe_highlight"

									name="test_report_account"

									string="TXT"
							/>

							<button 
									type="object"
									class="oe_highlight"

									name="test_report_product"

									string="PROD"
							/>
	                    </group>
                    </group>


				</xpath>

			</field>

		</record>
		<!-- Form - END -->




<!-- FORM 3 --> 
		<record model="ir.ui.view" id="openhealth.treatment_3_form_view">
			<field name="name">treatment.form</field>
			<field name="model">openhealth.treatment</field>
			<field name="priority" eval="5"/>
			<field name="arch" type="xml">
			
				<form string="Treatment 3 Form">
			
					<header>

							<!-- Consultation Medical --> 
							<button 
								type="object"
								class="oe_highlight"

								name="create_order_con_med"

								string="CONSULTA MEDICA"
							/>



							<!-- Consultation Gyn --> 
							<button 
								type="object"
								class="oe_highlight"

								name="create_order_con_gyn"

								string="CONSULTA GINECOLOGIA"
							/>



							<!-- Consultation Premium --> 
							<button 
								type="object"
								class="oe_highlight"

								name="create_order_con_chav"

								string="CONSULTA DR CHAVARRI"
							/>
					</header>

					<sheet><notebook></notebook></sheet>
				</form>
			</field>
		</record>




